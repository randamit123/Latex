{
    "version": 1,
    "projects": [
        {
            "name": "frontend",
            "path": "frontend",
            "builds": [
                {
                    "src": "package.json",
                    "use": "@vercel/next"
                }
            ]
        },
        {
            "name": "server",
            "path": "server",
            "builds": [
                {
                    "src": "app.py",
                    "use": "@vercel/python"
                }
            ]
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/server/app.py"
        },
        {
            "src": "/(.*)",
            "dest": "/frontend/$1"
        }
    ]
}